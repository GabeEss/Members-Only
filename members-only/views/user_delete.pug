extends layout

block content
  h1 #{title}: #{user.username}
  if c_user
    if user_messages.length
      p #[strong Delete the following messages before attempting to delete this user.]

      div(style='margin-left:20px;margin-top:20px')
        h4 Messages

        dl
          each message in user_messages
            dt
              a(href=message.url) #{message.title}
            dd #{message.timestamp_formatted}
    else
      p Do you really want to delete this user?
      form(method='POST' action='')
        div.form-group
          input#userid.form-control(type='hidden', name='userid', required='true', value=user._id)

        button.btn.btn-primary(type='submit') Delete
